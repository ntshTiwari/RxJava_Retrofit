<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/card_item_border"
    android:paddingVertical="20dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/dummy_image"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <View
        android:background="@color/horizontal_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_text_border_thickness"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/secondary_text_color"
        android:fontFamily="@font/poppins_regular"
        android:paddingHorizontal="@dimen/card_text_margin"
        android:textFontWeight="400"
        android:text="Vendor code: "/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="6dp"/>

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/primary_text_color"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/card_text_margin"
        android:textFontWeight="800"
        android:text="{Product name} "/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/product_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/secondary_text_color"
        android:fontFamily="@font/poppins_regular"
        android:paddingHorizontal="@dimen/card_text_margin"
        android:textFontWeight="400"
        android:text="Price:"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/card_text_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/primary_text_color"
            android:fontFamily="@font/poppins_bold"
            android:textFontWeight="800"
            android:text="{Product Price} "/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/product_previous_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/secondary_text_color"
            android:fontFamily="@font/poppins_regular"
            android:textFontWeight="600"
            android:text="800 $ "/>

    </LinearLayout>

</LinearLayout>